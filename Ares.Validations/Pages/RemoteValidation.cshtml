@page
@model Ares.Validations.Pages.RemoteValidationModel
@{
    ViewData["Title"] = "RemoteValidation";
}

<h1>RemoteValidation</h1>

<div class="form-row">
    <div class="form-group">
        <form method="post">
            <label asp-for="Email" class="control-label" />
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>


            <label asp-for="PhoneNumber" class="control-label" />
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>



            <input type="submit" />
        </form>

    </div>
</div>


@section scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.js"></script>

}