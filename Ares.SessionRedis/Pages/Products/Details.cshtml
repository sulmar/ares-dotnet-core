@page
@model Ares.SessionRedis.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Overview</h6>
        </div>
      
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">@Model.Product.Name</h3>
                <p class="card-text">@Model.Product.Color</p>
                <p class="card-text">@Model.Product.UnitPrice</p>
                <p class="card-text"><small class="text-muted">Last Access @Model.Product.LastAccess</small></p>
            </div>
        </div>
    </div>